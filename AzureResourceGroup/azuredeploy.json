{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "West US",
        "East US",
        "West Europe",
        "East Asia",
        "Southeast Asia"
      ],
      "metadata": {
        "description": "The region to deploy the resources into"
      }
    },
    "nameSpace": {
      "type": "string",
      "defaultValue": "bw",
      "metadata": {
        "description": "The unique namespace for the solution"
      }
    },
    "solution": {
      "type": "string",
      "defaultValue": "dx",
      "metadata": {
        "description": "The name of the solution"
      }
    },
    "id": {
      "type": "int",
      "defaultValue": "1",
      "metadata": {
        "description": "The ID of the solution"
      }
    }
  },
  "variables": {
    "dcAvailabilitySetName": "[concat(parameters('nameSpace'),parameters('solution'),'dc')]",
    "infraStorageAccountType": "Standard_LRS",
    "longNameSuffix": "[toLower(concat(parameters('nameSpace'),parameters('solution'),parameters('id')))]",
    "loc": "[toLower(replace(parameters('location'),' ',''))]"
  },
  "resources": [

  ],
  "outputs": {
    "O1": {
      "value": "[variables('loc')]",
      "type": "string"
    },
    "O2": { 
 			"value": "[variables('longNameSuffix')]", 
 			"type" : "string" 
      }
}
